<p id="notice"><%= notice %></p>

<div class="col-md-4 leftside">

  <%= render "maps/leftside_map" %>

</div>
<div class="col-md-6 middle">

  <div id="class_post">
    <h1>Listing Classes</h1>
    <% @klasses.where(:listed => true).each do |klass| %>
      <li>
          <div class="dealbox">
              <div id="dealheader">
                  <%= klass.title %>
              </div>
                 <div class="dealpad">
                  <div class="row">
                    <div class="col-md-6">
                      <%= klass.place %><br>
                      <%= klass.date %>
                    </div>  
                     <div class="col-md-6">

                     <%= button_to "From: #{klass.price}â‚ª", klass, :method => "get", class: 'button' %>
              Session
                  </div>
                </div>
              </div>
          </div>
      </li>
    <% end %>

  </div>

<!-- Rails Table -->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Teacher</th>
      <th>Description</th>
      <th>Date</th>
      <th>Time</th>
      <th>Place</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @klasses.each do |klass| %>
      <tr>
        <td><%= klass.title %></td>
        <td><%= klass.user.name %></td>
        <td><%= klass.description %></td>
        <td><%= klass.date %></td>
        <td><%= klass.time %></td>
        <td><%= klass.place %></td>
        <td><%= klass.price %></td>
        <td><%= link_to 'Show', klass %></td>
        <td><%= link_to 'Edit', edit_klass_path(klass) %></td>
        <td><%= link_to 'Destroy', klass, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Klass', new_klass_path %>

</div>
<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 rightside" id="rightside">

</div>
